        <!--<log type="coverage-html" target="logs/coverage"/>-->
        <!--<log type="coverage-clover" target="logs/clover.xml"/>-->
        <!--<log type="coverage-text" target="php://stdout" showUncoveredFiles="true"/>-->
    <!--</logging>-->
</phpunit>
